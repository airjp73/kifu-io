{
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "jsx": "preserve",
    "sourceMap": false,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "noImplicitAny": true
  },
  "include": [
    "src/**/*",
    "pages/**/*"
  ],
  "exclude": [
    "node_modules",
    ".next"
  ]
}